{
    "version": 2,
    "configurePresets": [
        {
            "name": "vcpkg-debug",
            "displayName": "ninja-debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "vcpkg-release",
            "displayName": "ninja-release",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "vcpkg-gcc15-debug",
            "displayName": "ninja-debug (gcc-15)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/gcc15-debug",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc-15",
                "CMAKE_CXX_COMPILER": "g++-15"
            }
        }
    ]
}